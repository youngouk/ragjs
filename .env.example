# Simple RAG Monorepo - Environment Configuration

# ===========================================
# Backend Environment Variables
# ===========================================
# Copy these to apps/backend/.env

# AI Service API Keys (Required for backend)
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
COHERE_API_KEY=your_cohere_api_key_here

# Vector Database Configuration
QDRANT_URL=http://localhost:6333
QDRANT_PORT=6333
QDRANT_API_KEY=

# Server Configuration
NODE_ENV=development
SERVER_PORT=8000
SERVER_HOST=0.0.0.0
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ===========================================
# Frontend Environment Variables
# ===========================================
# Copy these to apps/frontend/.env

# API Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000

# App Configuration
VITE_APP_NAME=Simple RAG Chatbot
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=AI-Powered Document Chat System

# Feature Flags
VITE_ENABLE_PWA=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true