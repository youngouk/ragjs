# Simple RAG Node.js Backend - Environment Configuration

# ===========================================
# Server Configuration
# ===========================================
NODE_ENV=development
SERVER_PORT=8000
SERVER_HOST=0.0.0.0
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ===========================================
# AI Service API Keys
# ===========================================

# Google Gemini (Primary embedding and generation)
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# OpenAI GPT (Alternative generation)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude (Alternative generation)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Cohere (Alternative generation)
COHERE_API_KEY=your_cohere_api_key_here

# ===========================================
# Vector Database Configuration (Qdrant)
# ===========================================
QDRANT_URL=http://localhost:6333
QDRANT_PORT=6333
QDRANT_API_KEY=

# ===========================================
# File Upload Configuration
# ===========================================
UPLOAD_DIR=uploads
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=pdf,txt,docx,xlsx,csv

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_FILES=5
LOG_MAX_SIZE=20971520

# ===========================================
# Rate Limiting Configuration
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL=true

# ===========================================
# Security Configuration
# ===========================================
TRUST_PROXY=false
COMPRESSION_LEVEL=6

# ===========================================
# Session Configuration
# ===========================================
SESSION_TTL_HOURS=1
SESSION_CLEANUP_INTERVAL_MINUTES=5

# ===========================================
# Development Configuration
# ===========================================
# Set to true to enable detailed error responses in development
DEBUG_MODE=true

# ===========================================
# AI Model Configuration
# ===========================================
# Default models for each provider
DEFAULT_EMBEDDING_MODEL=text-embedding-004
DEFAULT_GOOGLE_MODEL=gemini-2.0-flash-exp
DEFAULT_OPENAI_MODEL=gpt-4o
DEFAULT_ANTHROPIC_MODEL=claude-3-5-haiku-20241022
DEFAULT_COHERE_MODEL=command-r-plus-08-2024

# Generation parameters
DEFAULT_MAX_TOKENS=1000
DEFAULT_TEMPERATURE=0.7
DEFAULT_TOP_P=0.9

# ===========================================
# Document Processing Configuration
# ===========================================
DEFAULT_CHUNK_SIZE=1000
DEFAULT_CHUNK_OVERLAP=200
PROCESSING_TIMEOUT_MS=300000

# ===========================================
# Vector Search Configuration
# ===========================================
DEFAULT_SEARCH_LIMIT=5
DEFAULT_SEARCH_THRESHOLD=0.7
VECTOR_DIMENSION=768

# ===========================================
# Health Check Configuration
# ===========================================
HEALTH_CHECK_TIMEOUT_MS=5000
HEALTH_CHECK_RETRY_ATTEMPTS=3

# ===========================================
# Performance Configuration
# ===========================================
REQUEST_TIMEOUT_MS=30000
BODY_PARSER_LIMIT=50mb
CONCURRENT_PROCESSING_LIMIT=5